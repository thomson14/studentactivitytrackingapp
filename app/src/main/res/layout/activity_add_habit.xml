<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".habitTracker.AddHabitActivity">

  <com.rengwuxian.materialedittext.MaterialEditText
      android:id="@+id/editText_habit_name"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:hint="TITLE"
      android:padding="8dp"
      android:layout_marginStart="16dp"
      android:textSize="20dp"
      app:met_floatingLabel="highlight"
      />

    <Button
        android:id="@+id/button_reminder_time"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Set Reminder"
        android:layout_below="@+id/editText_habit_name"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        />
     <TextView
         android:id="@+id/text_time"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:layout_below="@id/button_reminder_time"
         android:text="Set time"
         android:layout_marginTop="12dp"
         android:layout_marginStart="16dp"
         />

      <Button
          android:id="@+id/save_habit_button"
          android:layout_width="200dp"
          android:layout_height="60dp"
          android:layout_below="@id/text_time"
          android:layout_marginTop="12dp"
          android:layout_marginStart="16dp"
          android:text="SAVE"

          />
</RelativeLayout>