<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allscreensbg"
    android:orientation="vertical"
    tools:context=".ToDoList.AddToDoListActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"/>

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/title_To_do"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:met_floatingLabel="highlight"
            android:layout_marginTop="50dp"
            android:textSize="25sp"
            android:inputType="text"
            android:hint="Add Task"
            />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50.5dp"
            android:layout_toEndOf="@+id/title_To_do"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            />

    </RelativeLayout>

    <Button
        android:layout_width="250dp"
        android:background="@drawable/savebutton"
        android:layout_height="80dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:padding="16dp"

        android:id="@+id/saveButtonToDo"
        />


</LinearLayout>